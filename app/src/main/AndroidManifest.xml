<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.co.ktpsolutions.www.adamscoffeebar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LandingActivity" />
        <activity android:name=".NewOrderActivity" />
        <activity android:name=".FoodActivity" />
        <activity android:name=".BeverageActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".CurrentOrderActivity" />
        <activity android:name=".OrderHistoryActivity" />
        <activity android:name=".CustActivity" />
        <activity android:name=".SetPasswordActivity"></activity>
    </application>

</manifest>